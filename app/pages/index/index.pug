  section.section.video
    .container
      h2 Наши видео
      .video__content
        +video-item({image: 'video-1.png'})
        +video-item({image: 'video-2.png'})
        +video-item({image: 'video-3.png'})
      a(href="").video__link Перейти на канал
        svg.video__link-icon
          use(href="#icon-arrow-up")
  section.section.news
    .container
      h2 Новости
      .news__content
        +news({image: 'news-1.png', date: '27 сентября 2021', title: 'Сейчас всё чаще звучит грохот грядущих изменений'})
        +news({date: '27 сентября 2021', title: 'Эксперты утверждают, что новая модель организационной деятельности одухотворила всех причастных', underline: true})
        +news({date: '27 сентября 2021', title: 'Базовый вектор развития оправдал надежды граждан'})
